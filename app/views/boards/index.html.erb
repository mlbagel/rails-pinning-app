<p id="notice"><%= notice %></p>

<h1>BOARDS</h1>
<hr>
<%= current_user.inspect %>
<hr>
  <%= @boards.inspect %>
<hr>
<div class="table-responsive">
<table class="table table-striped table-boardered">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.name %></td>
        <td><%= board.user.fullname %></td>
        <td><%= link_to 'Show', board %></td>
        <% if board.user == current_user %>
          <td><%= link_to 'Edit', edit_board_path(board) %></td>
          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Board', new_board_path %>
<br>
